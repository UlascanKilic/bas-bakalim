<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ulas_.deneme2.OyunModuCehennem"
    android:id="@+id/layoutBaba"
    android:background="@mipmap/sparkaplan">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/sayacTiklama"
            android:layout_width="116dp"
            android:layout_height="70dp"
            android:layout_marginLeft="130dp"

            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="7dp" />

        <ImageView
            android:id="@+id/sayacTikla"
            android:layout_width="116dp"
            android:layout_height="70dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/sayacHediye"
            android:layout_width="116dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            app:srcCompat="@mipmap/hediye" />

        <TextView
            android:id="@+id/textPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="23dp"
            android:text="0"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textTiklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="23dp"
            android:text="0"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textHediye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="328dp"
            android:layout_marginTop="23dp"
            android:text="0"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginLeft="120dp"
            android:layout_marginTop="58dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="500dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"

        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/buttonTiklaSoldanSaga"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_above="@+id/buttonTiklaSagCapraz"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="185dp"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/buttonTiklaSagCapraz"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/buttonTiklaSagdanAsagi"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/buttonTiklaYukardanAsagi"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
